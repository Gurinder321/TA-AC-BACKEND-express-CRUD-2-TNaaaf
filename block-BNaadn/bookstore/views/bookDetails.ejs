<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Book Details</h1>
    <a href="/books/new">Add Books</a>

    <section>
      <div>
        <h2><%= book.title %></h2>
        <p><%= book.description %></p>
        <p><%= book.author %></p>
        <h3>Price: <%= book.price %></h3>
        <a href="/books/<%= book._id %>/edit">
          <button>Edit</button>
        </a>
        <a href="/books/<%= book._id %>/delete">
          <button>Delete</button>
        </a>
      </div>

      <div>
        <form action="/books/<%= book._id %>/comments" method="POST">
          <textarea
            name="content"
            id=""
            cols="30"
            rows="10"
            placeholder="Add Comment..."
          ></textarea>
          <input type="submit" value="Add Comment" />
        </form>
      </div>

      <h2>Comments</h2>

      <% book.comments.forEach(comment => { %>
      <div>
        <p><%= comment.content %></p>
        <a href="/comments/<%= comment.id %>/edit">
          <button>Edit</button>
        </a>
        <a href="/comments/<%= comment.id %>/delete">
          <button>Delete</button>
        </a>
      </div>
      <% }) %>
    </section>
  </body>
</html>
